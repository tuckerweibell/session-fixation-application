<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Sign Up</h2>

      <%= form_with(model: @user, local: true, class: 'needs-validation', novalidate: true) do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', required: true %>
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Create a password', required: true %>
          <div class="invalid-feedback">Please provide a password.</div>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, class: 'form-label' %>
          <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password', required: true %>
          <div class="invalid-feedback">Please confirm your password.</div>
        </div>

        <div class="d-grid">
          <%= form.submit 'Sign Up', class: 'btn btn-primary btn-lg' %>
        </div>

        <div class="mt-3 text-center">
          <p>Already have an account? <%= link_to 'Login', login_path %></p>
          <p>Back to home page: <%= link_to 'Back', root_path %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
